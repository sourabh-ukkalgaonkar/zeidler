<div class='col-md-12'>
  <%= form_tag articles_path, :method => 'get' do %>
    <div class='row'>
      <div class='form-group col-md-3'>
        <%= text_field_tag 'search[query]', params[:search] && params[:search][:query], placeholder: 'query', class: 'form-control'  %>
      </div>
      <div class='form-group col-md-3'>
        <%= text_field_tag 'search[categories]', params[:search] && params[:search][:categories], placeholder: 'Please add , seprated categories to search more than one', class: 'form-control' %>
      </div>

      <div class='form-group col-md-3'>
        <%= text_field_tag 'search[user]', params[:search] && params[:search][:user], placeholder: 'user name', class: 'form-control' %>
      </div>
    </div>

    <div class='row'>
      <div class='form-group col-md-3'>
        <%= submit_tag "Search", :name => nil, class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>

  <%= link_to 'Clear Filters', articles_path %>
</div>