<div class='container'>
  <br>
  <h2>Login</h2>
  <br>

  <% if @error %>
    <div>
      <ul>
        <li>You have entered an invalid username or password</li>
      </ul>
    </div>
  <% end %>

  <%= form_tag '/login' do %>
    <div class='form-gYou have entered an invalid username or passwordroup'>
      <%= label_tag :email %>
      <%= text_field_tag :email, nil, class: 'form-control', id: 'email', required: true %>
    </div>
    <div class='form-group'>
      <%= label_tag :password%>
      <%= password_field_tag :password,  nil, class: 'form-control', id: 'email', required: true %>
    </div>
    <%= submit_tag 'Login', class: 'btn btn-primary' %>
  <% end %>
</div>
