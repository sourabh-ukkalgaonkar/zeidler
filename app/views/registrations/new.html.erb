<div class='container'>
  <br>
  <h2>Sign Up</h2>
  <br>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this user from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_tag '/sign-up' do %>
    <div class='form-group'>
      <%= label_tag :name %>
      <%= text_field_tag "user[name]", nil, class: 'form-control', id: 'email', required: true %>
    </div>

    <div class='form-group'>
      <%= label_tag :email %>
      <%= email_field_tag "user[email]", nil, class: 'form-control', id: 'email', required: true %>
    </div>

    <div class='form-group'>
      <%= label_tag :password%>
      <%= password_field_tag "user[password]",  nil, class: 'form-control', id: 'email', required: true %>
    </div>

    <%= submit_tag 'Sign Up', class: 'btn btn-primary' %>
  <% end %>
</div>
